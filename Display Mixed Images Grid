cols = 5
rows = (len(imgs) + cols - 1) // cols

plt.figure(figsize=(4 * cols, 5 * rows))
for i, (title, img) in enumerate(imgs):
    plt.subplot(rows, cols, i + 1)
    plt.imshow(img)
    plt.title(title, fontsize=16, fontweight='bold')  # ‚Üê display full title
    plt.axis('off')

plt.tight_layout()
plt.show()
